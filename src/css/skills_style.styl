firstcolumnsize = windowsize * 0.7571 * 0.44
greycolor = rgb(231,231,231)


func_paint_blue_shadow(value)
  vall = bluecolor 35px 0
  coef = 0
  for i in 2..value
    if i == 5 || i ==10
      coef +=3
    vall = vall, bluecolor 35px * (i) + coef 0
  return vall

func_paint_grey_shadow(value)
  vall = greycolor -35px 0
  for i in 2..value
    vall = vall, greycolor -35px * (i) - 3 0
  return vall



