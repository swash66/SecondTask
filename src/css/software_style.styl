@font-face {
  font-family: 'Myriad Pro';
  src: url('/src/css/fonts/MyriadPro/MyriadPro-Bold.eot');
  src: local('/src/css/fonts/MyriadPro/Myriad Pro Bold'), local('MyriadPro-Bold'),
          url('/src/css/fonts/MyriadPro/MyriadPro-Bold.eot?#iefix') format('embedded-opentype'),
          url('/src/css/fonts/MyriadPro/MyriadPro-Bold.woff') format('woff'),
          url('/src/css/fonts/MyriadPro/MyriadPro-Bold.ttf') format('truetype');
  font-weight: bold;
  font-style: normal;
}

