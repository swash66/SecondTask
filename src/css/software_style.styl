func_gradient(d1)
  &::after
    content ""
    //width 358px
    width 87.74%
    height 29px
    display block
    background-color bluecolor
    background linear-gradient(to right, bluecolor d1, greycolor d1)


.software
  .title
    .group-title
      margin-left 3.19%
  .software_list
    width 90.66%
    max-width 90.66%
    margin-left 2%
    color black
    text-transform uppercase
    font-family "Myriad Pro Regular"
    font-size 0.625em
    display flex
    @media (max-width: 900px)
      flex-direction column
      align-items center
    .software_list_column
      display flex
      width 50%
      max-width 50%
      @media (max-width 900px)
        width 80%
        max-width 80%
      flex-direction column
    .software_list_column1
      .software_element:nth-child(1)
        func_gradient(90%)
      .software_element:nth-child(2)
        func_gradient(70%)
      .software_element:nth-child(3)
        func_gradient(55%)
    .software_list_column2
      .software_element:nth-child(1)
        func_gradient(80%)
      .software_element:nth-child(2)
        func_gradient(60%)
      .software_element:nth-child(3)
        func_gradient(90%)




